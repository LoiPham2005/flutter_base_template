{
  "version": "2.0.0",
  "tasks": [
    // ════════════════════════════════════════════════════════════
    // 🧩 1. Build Runner
    // ════════════════════════════════════════════════════════════
    {
      "label": "Build Runner: One-time build",
      "type": "shell",
      "command": "flutter pub run build_runner build --delete-conflicting-outputs",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build Runner: Watch",
      "type": "shell",
      "command": "flutter pub run build_runner watch --delete-conflicting-outputs",
      "group": "build",
      "problemMatcher": []
    },
    // ════════════════════════════════════════════════════════════
    // 🌐 2. Generate Localization
    // ════════════════════════════════════════════════════════════
    {
      "label": "Generate Localization (l10n)",
      "type": "shell",
      "command": "flutter gen-l10n",
      "group": "build",
      "problemMatcher": []
    },
    // ════════════════════════════════════════════════════════════
    // 🧹 3. Clean Project
    // ════════════════════════════════════════════════════════════
    {
      "label": "Clean Project",
      "type": "shell",
      "command": "flutter clean && flutter pub get",
      "group": "build",
      "problemMatcher": []
    },
    // ════════════════════════════════════════════════════════════
    // 🏗️ 4. Build APK (--dart-define=ENV, NO --flavor)
    // ════════════════════════════════════════════════════════════
    {
      "label": "Build APK (Development)",
      "type": "shell",
      "command": "flutter build apk --dart-define=ENV=dev",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build APK (Staging)",
      "type": "shell",
      "command": "flutter build apk --release --dart-define=ENV=staging --split-debug-info=build/debug-symbols",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build APK (Production)",
      "type": "shell",
      "command": "flutter build apk --release --dart-define=ENV=prod --split-debug-info=build/debug-symbols",
      "group": "build",
      "problemMatcher": []
    },
    // ════════════════════════════════════════════════════════════
    // 🏬 5. Build AAB (Play Store)
    // ════════════════════════════════════════════════════════════
    {
      "label": "Build AAB (Production)",
      "type": "shell",
      "command": "flutter build appbundle --release --dart-define=ENV=prod --split-debug-info=build/debug-symbols",
      "group": "build",
      "problemMatcher": []
    },
    // ════════════════════════════════════════════════════════════
    // 🚀 6. Run App (--dart-define=ENV, NO --flavor)
    // ════════════════════════════════════════════════════════════
    {
      "label": "Run App (Development)",
      "type": "shell",
      "command": "flutter run --dart-define=ENV=dev",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Run App (Staging)",
      "type": "shell",
      "command": "flutter run --dart-define=ENV=staging",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Run App (Production)",
      "type": "shell",
      "command": "flutter run --dart-define=ENV=prod",
      "group": "test",
      "problemMatcher": []
    },
    // ════════════════════════════════════════════════════════════
    // 🍏 7. Build iOS (--dart-define=ENV, NO --flavor)
    // ════════════════════════════════════════════════════════════
    {
      "label": "Build iOS (Development)",
      "type": "shell",
      "command": "flutter build ios --dart-define=ENV=dev",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build iOS (Staging)",
      "type": "shell",
      "command": "flutter build ios --release --dart-define=ENV=staging",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build iOS (Production)",
      "type": "shell",
      "command": "flutter build ios --release --dart-define=ENV=prod",
      "group": "build",
      "problemMatcher": []
    },
    // ════════════════════════════════════════════════════════════
    // ⚡ 8. Flutter Pub Commands
    // ════════════════════════════════════════════════════════════
    {
      "label": "Flutter Pub Get",
      "type": "shell",
      "command": "flutter pub get",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Flutter Pub Upgrade",
      "type": "shell",
      "command": "flutter pub upgrade",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Flutter Pub Outdated",
      "type": "shell",
      "command": "flutter pub outdated",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Flutter Clean",
      "type": "shell",
      "command": "flutter clean",
      "group": "build",
      "problemMatcher": []
    }
  ]
}