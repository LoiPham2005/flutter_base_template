{
  // ğŸ”§ Flutter SDK qua FVM
  "dart.flutterSdkPath": ".fvm/flutter_sdk",
  "dart.flutterSdkPaths": [".fvm/flutter_sdk"],

  // ğŸ’¡ Tá»± Ä‘á»™ng format vÃ  fix lá»—i khi lÆ°u
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",  // âœ… Sáº¯p xáº¿p imports
    "source.fixAll": "explicit"           // âœ… Fix táº¥t cáº£ lá»—i cÃ³ thá»ƒ
  },

  // ğŸ¯ Cáº¥u hÃ¬nh riÃªng cho Dart
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [100],                // Hiá»ƒn thá»‹ line á»Ÿ cá»™t 100
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off",
    "editor.defaultFormatter": "Dart-Code.dart-code"  // âœ… ThÃªm nÃ y
  },

  // âœ¨ Giá»›i háº¡n Ä‘á»™ dÃ i dÃ²ng code
  "dart.lineLength": 100,

  // ğŸ”¥ Hot reload tá»± Ä‘á»™ng khi save
  "dart.flutterHotReloadOnSave": "always",
  "dart.flutterHotRestartOnSave": "never",

  // ğŸ” KhÃ´ng cáº§n debug thÆ° viá»‡n há»‡ thá»‘ng
  "dart.debugExternalPackageLibraries": false,
  "dart.debugSdkLibraries": false,

  // ğŸ“Š Hiá»ƒn thá»‹ TODO/FIXME comments
  "dart.showTodos": true,

  // ğŸ—‚ï¸ LiÃªn káº¿t tá»‡p
  "files.associations": {
    "*.dart": "dart"
  },

  // ğŸš« áº¨n cÃ¡c thÆ° má»¥c build tool
  "files.exclude": {
    "**/.dart_tool": true,
    "**/.packages": true,
    "**/build": true,
    "**/.idea": true,
    "**/.gradle": true,
    "**/.vscode": false,    // âœ… Hiá»ƒn thá»‹ .vscode
    "**/.fvm": false        // âœ… Hiá»ƒn thá»‹ .fvm Ä‘á»ƒ dá»… debug
  },

  // ğŸ§  TÄƒng tá»‘c Ä‘á»™ IntelliSense
  "search.exclude": {
    "**/.dart_tool": true,
    "**/.fvm": true,        // âœ… KhÃ´ng search trong .fvm
    "**/build": true,
    "**/*.freezed.dart": true,  // âœ… Bá» qua generated files
    "**/*.g.dart": true,
    "**/*.gr.dart": true,
    "**/generated": true
  },

  // ğŸ§¹ Tá»± Ä‘á»™ng xÃ³a trailing whitespace
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  // ğŸ§± Há»— trá»£ auto-complete tá»‘t hÆ¡n
  "editor.quickSuggestions": {
    "strings": true,
    "comments": false,
    "other": true
  },

  // ğŸ“ Snippet suggestions
  "editor.snippetSuggestions": "top",
  "editor.suggest.localityBonus": true,

  // ğŸ¨ Bracket colorizer (VS Code built-in)
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true
}